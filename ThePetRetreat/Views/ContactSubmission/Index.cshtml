@model ThePetRetreat.ViewModels.ContactSubmissionsVM

@{
    ViewBag.Title = "Index";
}

<h2>Contact Us</h2>

 <div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "ContactSubmission", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h4>Fill out the form below.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    @Html.LabelFor(m => m.Message, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-outline-dark" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
