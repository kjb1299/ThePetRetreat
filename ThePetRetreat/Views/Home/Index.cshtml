@{
    ViewBag.Title = "Home Page";
}

<main>
    <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Home/dogs-river-carousel.jpg" class="d-block w-100" alt="Two dogs near a river">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Freedom to Roam</h5>
                    <p>With owner approval, select dogs can enjoy controlled, off-leash fun in open areas like trails and riversides.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Home/facility-carousel.jpg" class="d-block w-100" alt="Front view of The Pet Retreat facility">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Where Comfort Meets Nature</h5>
                    <p>Designed to feel like a true retreat, our cabin-inspired facility provides comfort, safety, and fresh air for every guest.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Home/dogs-kennel-carousel.jpg" class="d-block w-100" alt="Woman petting a dog in an outdoor kennel">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Compassionate Care</h5>
                    <p>Every pet receives one-on-one attention, affection, and interaction from our caring, trained team.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title" class="mb-2">The Pet Retreat</h1>
        <p class="lead mb-4">
            Welcome to The Pet Retreat — a cozy, trusted haven where your pets can relax, play,
            and feel right at home with personalized care while you're away.
        </p>
    </section>

    <div class="row mt-4">
        <section class="col-md-4" aria-labelledby="boardingServicesTitle">
            <h2 id="boardingServicesTitle">Boarding Services</h2>
            <p>
                Flexible options tailored to your pet’s needs—from cozy overnight stays to extended care.
                We accommodate dogs, cats, and other small animals with loving attention.
            </p>
            <p><a class="btn btn-outline-dark" href="#">Learn more &raquo;</a></p> @*Add services page*@
        </section>
        <section class="col-md-4" aria-labelledby="dailyRoutineTitle">
            <h2 id="dailyRoutineTitle">A Day at The Retreat</h2>
            <p>
                Our guests enjoy playtime, walks in nature, socialization, and plenty of rest.
                Every day is designed around fun and comfort, with personalized care from our expert staff.
            </p>
            <p><a class="btn btn-outline-dark" href="#">Discover our routine &raquo;</a></p> @*Add About/DailyRoutine*@
        </section>
        <section class="col-md-4" aria-labelledby="meetTeamTitle">
            <h2 id="meetTeamTitle">Meet Our Team</h2>
            <p>
                Our experienced and compassionate staff are passionate about animals and trained to provide one-on-one care
                to ensure every pet feels safe and loved.
            </p>
            <p><a class="btn btn-outline-dark" href="#">Get to know us &raquo;</a></p> @*Add About/Team*@
        </section>
    </div>
</main>